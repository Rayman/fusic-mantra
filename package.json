{
  "name": "mantra-demo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "test": "xo"
  },
  "xo": {
    "space": true,
    "rules": {
      "strict": [
        2,
        "never"
      ],
      "no-unused-expressions": [
        2,
        {
          "allowShortCircuit": true
        }
      ],
      "new-cap": [
        2,
        {
          "capIsNewExceptions": [
            "Optional",
            "OneOf"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "xo": "^0.12.1"
  }
}
